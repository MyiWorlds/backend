{
  "name": "graphql-ts-server-boilerplate",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daveyedwards/backend.git"
  },
  "main": "build/index.js",
  "keywords": [],
  "author": "daveyedwards",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daveyedwards/backend/issues"
  },
  "homepage": "https://github.com/daveyedwards/backend#readme",
  "description": "A platform to build your worlds.",
  "scripts": {
    "watch": "SET NODE_ENV=development&& concurrently --kill-others \"npm run --watch gen-schema-types\" \"npm run server\"",
    "server": "nodemon --inspect=5858 -r ts-node/register ./src/index.ts",
    "deploy": "SET NODE_ENV=production&& npm run build && gcloud app deploy",
    "build": "rimraf ./build && tsc && copyfiles -u 1 src/**/*.graphql build",
    "start": "node build/index.js",
    "let-there-be-light": "ts-node ./src/services/firebase/firestore/seed/index.ts",
    "gen-schema-types": "nodemon -e graphql --exec ts-node src/scripts/createTypes.ts",
    "setup-cloud-storage-development": "SET NODE_ENV=development&& ts-node ./src/services/google-cloud/cloud-storage/createBuckets.ts",
    "setup-cloud-storage-qa": "SET NODE_ENV=qa&& ts-node ./src/services/google-cloud/cloud-storage/createBuckets.ts qa",
    "setup-cloud-storage-production": "SET NODE_ENV=production&& ts-node ./src/services/google-cloud/cloud-storage/createBuckets.ts production",
    "seed-firestore-circles-development": "SET NODE_ENV=development&& ts-node ./src/services/firebase/firestore/seed/createTypes.ts",
    "update-firestore-circles-development": "SET NODE_ENV=development&& ts-node ./src/services/firebase/firestore/seed/updateTypes.ts"
  },
  "dependencies": {
    "@google-cloud/debug-agent": "^4.0.0",
    "@google-cloud/error-reporting": "^1.0.0",
    "@google-cloud/firestore": "^2.2.0",
    "@google-cloud/storage": "^2.5.0",
    "@gql2ts/from-schema": "^1.8.0",
    "apollo-server": "^2.6.2",
    "dataloader": "^1.4.0",
    "dotenv": "^8.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "firebase-admin": "^8.0.0",
    "glob": "^7.1.2",
    "graphql": "^14.3.1",
    "graphql-bigint": "^1.0.0",
    "graphql-fields": "^2.0.3",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.4",
    "graphql-type-json": "^0.3.0",
    "merge-graphql-schemas": "^1.5.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@gql2ts/types": "^1.8.0",
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.15.8",
    "@types/faker": "^4.1.2",
    "@types/glob": "^7.1.1",
    "@types/graphql-fields": "^1.3.0",
    "@types/graphql-type-json": "^0.3.0",
    "@types/node": "^12.0.8",
    "@types/node-fetch": "^2.3.5",
    "@types/request-promise": "^4.1.41",
    "@types/ws": "^6.0.1",
    "concurrently": "^4.0.1",
    "copyfiles": "^2.0.0",
    "gql2ts": "^1.7.2",
    "nodemon": "^1.18.2-alpha.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^3.5.1"
  }
}
